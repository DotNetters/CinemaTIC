@model Session

@{
    ViewBag.Title = Literals.DeleteSession;
}

<h2>@Literals.DeleteSession</h2>
<hr />

<div class="alert alert-warning">@Literals.SureToDelete</div>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TimeAndDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TimeAndDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <hr />
        <div class="form-actions no-color">
            <input type="submit" value="@Literals.Delete" class="btn btn-sm btn-primary" />
            @Html.ActionLink(Literals.Back, "Index", null, new { @class = "btn btn-sm btn-default" })
        </div>
    }
</div>

@section Scripts {
    <script type="text/javascript">
            $(function () { setActiveMenuItem("SessionsMenuItem"); });
    </script>
}
