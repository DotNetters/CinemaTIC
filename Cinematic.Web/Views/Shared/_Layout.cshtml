<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @Literals.AppTitle</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div style="padding-top: 2px;padding-right: 2px;">
                    <a href='@Url.Action("Index", "Home")'>
                        <img alt="@Literals.AppTitle" data-toggle="tooltip" data-placement="bottom" title="@Literals.AppTitle" src="~/Content/images/tickets46_logo.png" />
                    </a>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li id="HomeMenuItem">@Html.ActionLink(Literals.Home, "Index", "Home")</li>
                    <li id="TicketSellingMenuItem">@Html.ActionLink(Literals.TicketSelling, "Index", "TicketSelling")</li>
                    <li id="SessionsMenuItem">@Html.ActionLink(Literals.Sessions, "Index", "Sessions")</li>
                    <li id="AboutMenuItem">@Html.ActionLink(Literals.About, "About", "Home")</li>
                    <li id="ContactMenuItem">@Html.ActionLink(Literals.Contact, "Contact", "Home")</li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="footer body-content">
        <div class="container">
            <p class="text-muted">&copy; @SystemTime.Now().Year - @Literals.AppTitle.</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/site")
</body>
</html>